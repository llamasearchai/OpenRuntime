# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh,fish}]
indent_size = 2

# Markdown files
[*.{md,markdown}]
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Configuration files
[*.{ini,toml,cfg}]
indent_size = 4

# Dockerfiles
[Dockerfile*]
indent_size = 4

# HTML/CSS files
[*.{html,css,scss,sass}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Git files
[.git*]
indent_size = 2